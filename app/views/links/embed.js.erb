$("#<%= j(@contentdiv) %>").text("<%= j(@embed_title) %>");
<% if ((@embed_type == "video") && (@embed_format != "iframe")) %>
	$("#<%= j(@contentdiv) %>").append("<%= j(link_to image_tag(@embed_thumbnail), @embed_norm_url, :class => 'unembeddable', :target => '_blank') %>");
<% else %>
	$("#<%= j(@contentdiv) %>").append("<%= j(link_to image_tag(@embed_thumbnail), @embed_link, :class => 'fancybox fancybox.iframe') %>");
<% end %>
$(".fancybox").attr('rel', 'gallery').fancybox({
    openEffect  : 'none',
    closeEffect : 'none',
    nextEffect  : 'none',
    prevEffect  : 'none',
    padding     : 0,
    margin      : [20, 60, 20, 60] // Increase left/right margin
});

